<p id="notice"><%= notice %></p>

<h1>MSU Denver Courses</h1>

<table>
  <thead>
    <tr>
      <th>Prefix</th>
      <th>Number</th>
      <th>Description</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.prefix %></td>
        <td><%= course.number %></td>
        <td><%= course.description %></td>
        <td><%= course.teacher.full_teacher_name %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= button_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag(search_courses_url, method: "get") do %>
  <%= label_tag(:query, "Search by Course Description:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

<br>

