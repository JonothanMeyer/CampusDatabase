<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= form.label :semester %>
      <%= form.select(:semester, options_for_select(['Fall', 'Spring', 'Summer'])) %>
    </div>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.collection_select :course_id, Course.all, :id, :prefix_and_number %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
