<p id="notice"><%= notice %></p>

<h1>MSU Denver Offices</h1>

<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>Floor</th>
      <th>Room</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @offices.each do |office| %>
      <tr>
        <td><%= office.building_name %></td>
        <td><%= office.floor_number %></td>
        <td><%= office.room_number %></td>
        <td><%= link_to 'Show', office %></td>
        <td><%= link_to 'Edit', edit_office_path(office) %></td>
        <td><%= button_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_tag(search_offices_url, method: "get") do %>
  <%= label_tag(:query, "Search by Office Room Number:") %>
  <%= text_field_tag(:query) %>
  <%= submit_tag("Search") %>
<% end %>

